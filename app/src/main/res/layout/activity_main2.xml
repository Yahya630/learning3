<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/yahya1"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="تعلّم الأحرف العربية"
        android:textSize="24sp"
        android:textColor="#000000"
        android:background="@drawable/textview_border"
        android:fontFamily="sans-serif-medium"
        android:layout_marginBottom="24dp" />

    <GridLayout
        android:id="@+id/lettersGrid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:rowCount="7"
        android:alignmentMode="alignMargins"
        android:useDefaultMargins="true"
        android:padding="4dp">

        <!-- سيتم إنشاء الأزرار لكل حرف -->
        <Button android:id="@+id/letterA" android:text="أ" android:textSize="20sp" android:textColor="#FFFFFF" android:backgroundTint="#F44336" />
        <Button android:id="@+id/letterB" android:text="ب" android:textSize="20sp" android:textColor="#FFFFFF" android:backgroundTint="#E91E63" />
        <Button android:id="@+id/letterT" android:text="ت" android:textSize="20sp" android:textColor="#FFFFFF" android:backgroundTint="#9C27B0" />
        <Button android:id="@+id/letterTh" android:text="ث" android:textSize="20sp" android:textColor="#FFFFFF" android:backgroundTint="#673AB7" />
        <Button android:id="@+id/letterJ" android:text="ج" android:textSize="20sp" android:textColor="#FFFFFF" android:backgroundTint="#3F51B5" />
        <Button android:id="@+id/letterH" android:text="ح" android:textSize="20sp" android:textColor="#FFFFFF" android:backgroundTint="#2196F3" />
        <Button android:id="@+id/letterKh" android:text="خ" android:textSize="20sp" android:textColor="#FFFFFF" android:backgroundTint="#03A9F4" />
        <Button android:id="@+id/letterD" android:text="د" android:textSize="20sp" android:textColor="#FFFFFF" android:backgroundTint="#00BCD4" />
        <Button android:id="@+id/letterThal" android:text="ذ" android:textSize="20sp" android:textColor="#FFFFFF" android:backgroundTint="#009688" />
        <Button android:id="@+id/letterR" android:text="ر" android:textSize="20sp" android:textColor="#FFFFFF" android:backgroundTint="#4CAF50" />
        <Button android:id="@+id/letterZ" android:text="ز" android:textSize="20sp" android:textColor="#FFFFFF" android:backgroundTint="#8BC34A" />
        <Button android:id="@+id/letterS" android:text="س" android:textSize="20sp" android:textColor="#FFFFFF" android:backgroundTint="#CDDC39" />
        <Button android:id="@+id/letterSh" android:text="ش" android:textSize="20sp" android:textColor="#FFFFFF" android:backgroundTint="#FFEB3B" />
        <Button android:id="@+id/letterSad" android:text="ص" android:textSize="20sp" android:textColor="#FFFFFF" android:backgroundTint="#FFC107" />
        <Button android:id="@+id/letterDad" android:text="ض" android:textSize="20sp" android:textColor="#FFFFFF" android:backgroundTint="#FF9800" />
        <Button android:id="@+id/letterTaa" android:text="ط" android:textSize="20sp" android:textColor="#FFFFFF" android:backgroundTint="#FF5722" />
        <Button android:id="@+id/letterZaa" android:text="ظ" android:textSize="20sp" android:textColor="#FFFFFF" android:backgroundTint="#795548" />
        <Button android:id="@+id/letterAin" android:text="ع" android:textSize="20sp" android:textColor="#FFFFFF" android:backgroundTint="#9E9E9E" />
        <Button android:id="@+id/letterGhain" android:text="غ" android:textSize="20sp" android:textColor="#FFFFFF" android:backgroundTint="#607D8B" />
        <Button android:id="@+id/letterF" android:text="ف" android:textSize="20sp" android:textColor="#FFFFFF" android:backgroundTint="#FFB300" />
        <Button android:id="@+id/letterQ" android:text="ق" android:textSize="20sp" android:textColor="#FFFFFF" android:backgroundTint="#C2185B" />
        <Button android:id="@+id/letterK" android:text="ك" android:textSize="20sp" android:textColor="#FFFFFF" android:backgroundTint="#7B1FA2" />
        <Button android:id="@+id/letterL" android:text="ل" android:textSize="20sp" android:textColor="#FFFFFF" android:backgroundTint="#512DA8" />
        <Button android:id="@+id/letterM" android:text="م" android:textSize="20sp" android:textColor="#FFFFFF" android:backgroundTint="#1976D2" />
        <Button android:id="@+id/letterN" android:text="ن" android:textSize="20sp" android:textColor="#FFFFFF" android:backgroundTint="#0097A7" />
        <Button android:id="@+id/letterHaa" android:text="هـ" android:textSize="20sp" android:textColor="#FFFFFF" android:backgroundTint="#388E3C" />
        <Button android:id="@+id/letterW" android:text="و" android:textSize="20sp" android:textColor="#FFFFFF" android:backgroundTint="#FFA000" />
        <Button android:id="@+id/letterY" android:text="ي" android:textSize="20sp" android:textColor="#FFFFFF" android:backgroundTint="#E64A19" />



    </GridLayout>

</LinearLayout>
