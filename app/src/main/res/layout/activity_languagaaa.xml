        android:id="@+id/lettersGrid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:rowCount="6"
        android:alignmentMode="alignMargins"
        android:useDefaultMargins="true"
        android:padding="4dp">

